# Supabase
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_SERVICE_KEY=tu-service-role-key

# OpenAI
OPENAI_API_KEY=sk-...

# Telegram (para webhook en Vercel)
TELEGRAM_BOT_TOKEN=tu-token-de-botfather

# Telegram webhook security (recomendado)
# Se envía como header X-Telegram-Bot-Api-Secret-Token cuando lo configuras en setWebhook
TELEGRAM_WEBHOOK_SECRET=una-cadena-larga-y-secreta

# Límite de audio para transcripción (bytes). Default en código: 20MB
TELEGRAM_MAX_AUDIO_BYTES=20971520

# Proteger endpoints HTTP (opcional). Si está definido, exige header: x-api-key
CHAT_API_KEY=tu-api-key

# Server
PORT=3000
